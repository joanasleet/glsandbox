#version 440

layout (triangles, equal_spacing, ccw) in;

in vec3 eval_point[];

//uniform float tessLevelInner = 2.0;
//uniform float tessLevelOuter = 2.0;

uniform mat4 MV, P;

void main() {

    vec3 p0 = gl_TessCoord.x * eval_point[0];
    vec3 p1 = gl_TessCoord.y * eval_point[1];
    vec3 p2 = gl_TessCoord.z * eval_point[2];

    vec3 pos = p0 + p1 + p2;
    gl_Position = P * MV * vec4(pos, 1.0);
}