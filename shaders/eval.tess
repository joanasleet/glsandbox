#version 440

layout (quads, equal_spacing, ccw) in;

out vec2 teTex;
out float height;

uniform mat4 MVP;
layout (binding = 2) uniform sampler2D samplerDisp;

void main() {

    float u = gl_TessCoord.x;
    float omu = 1.0 - u;

    float v = gl_TessCoord.y;
    float omv = 1.0 - v;

    vec4 pos = 
    	(omu * omv *gl_in[0].gl_Position) +
    	(u * omv * gl_in[1].gl_Position) +
    	(u * v * gl_in[2].gl_Position) +
    	(omu * v * gl_in[3].gl_Position);

    //float dispy = sqrt(2500 - (pos.z)*(pos.z) - (pos.x)*(pos.x));
    pos.y = 1*texture(samplerDisp, gl_TessCoord.xy).z;
    pos.y = sqrt(pos.y);
    height = pos.y;

    gl_Position = MVP * (pos);

    // texture coords
    teTex = gl_TessCoord.xy;
}